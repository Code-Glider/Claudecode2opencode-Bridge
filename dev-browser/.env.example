# Dev Browser Service Configuration
# Copy this file to .env and fill in your credentials
# These credentials are stored locally and used for auto-login when sessions expire

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Run browser in headless mode (true/false)
HEADLESS=false

# Server ports (usually don't need to change)
HTTP_PORT=9222
CDP_PORT=9223

# =============================================================================
# SITE CREDENTIALS
# =============================================================================
# Add credentials for sites you want auto-login support
# Format: SITE_EMAIL, SITE_PASSWORD (optionally SITE_2FA_SECRET for TOTP)
#
# The auth manager will use these when it detects you've been logged out

# LinkedIn
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=
# LINKEDIN_2FA_SECRET=  # Optional: TOTP secret for 2FA (base32 encoded)

# Upwork
UPWORK_EMAIL=
UPWORK_PASSWORD=

# Twitter/X
TWITTER_EMAIL=
TWITTER_PASSWORD=

# Google (for NotebookLM, etc.)
GOOGLE_EMAIL=
GOOGLE_PASSWORD=

# Facebook
FACEBOOK_EMAIL=
FACEBOOK_PASSWORD=

# Instagram
INSTAGRAM_EMAIL=
INSTAGRAM_PASSWORD=

# GitHub
GITHUB_EMAIL=
GITHUB_PASSWORD=

# =============================================================================
# CUSTOM SITES
# =============================================================================
# Add your own sites using the pattern:
# SITENAME_EMAIL=
# SITENAME_PASSWORD=
# SITENAME_LOGIN_URL=https://example.com/login
# SITENAME_LOGGED_OUT_INDICATOR=sign in  (text that appears when logged out)

# Example:
# MYAPP_EMAIL=user@example.com
# MYAPP_PASSWORD=secretpassword
# MYAPP_LOGIN_URL=https://myapp.com/login
# MYAPP_LOGGED_OUT_INDICATOR=log in

# =============================================================================
# ENCRYPTION (Optional)
# =============================================================================
# If set, credentials will be encrypted at rest
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# ENCRYPTION_KEY=
